        <LangVersion>latest</LangVersion>
        <AssemblyName>LyncLog</AssemblyName>
        <RootNamespace>LyncLog</RootNamespace>

        <Version>0.2.0</Version>
        <Authors>Raemy Lalive &amp; Kids</Authors>
        <Description>raw text logging for Skype for business and Lync IM chats</Description>
